<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/black"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="130dp"
            android:background="@drawable/buttoncolorless"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="현재 잔액"
            android:textColor="@color/colorPoint"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_nowpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_inputpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="출금하실 금액을 입력하세요."
            android:textSize="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*최소출금은 1,000포인트부터 가능합니다."
            android:textColor="@color/colorPoint"
            android:textStyle="italic"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_pointout"
            android:background="@color/colorPoint"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="출금하기"
            android:textColor="@color/white"
            android:textSize="15dp"/>

    </RelativeLayout>

</LinearLayout>