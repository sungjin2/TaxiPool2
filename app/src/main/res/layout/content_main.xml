<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoShadowHeight="0dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoOverlay="true"
    sothree:umanoInitialState="collapsed"
    >
    <!--sothree:umanoScrollableView="@+id/list">-->
    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_toolbar"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            sothree:theme="@style/AppTheme"
            android:layout_width="match_parent"/>
        <LinearLayout
            android:id="@+id/view_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spot_rounded_corner"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_home_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPink"
                    android:text="이 위치로 출발지 설정 >"
                    />
                <TextView
                    android:id="@+id/tv_spotname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="location"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_place"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_place_yellow_24dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_place_auto"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="#d5ffffff"
            android:text="장소 검색으로 설정"
            android:layout_gravity="bottom"
            />
        <fragment
            android:id="@+id/map_sliding"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <include layout="@layout/content_main_sliding" />
</com.sothree.slidinguppanel.SlidingUpPanelLayout>