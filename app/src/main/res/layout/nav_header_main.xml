<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#ff000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/img_nav_info"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/tv_nav_infoname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="User's Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tv_nav_info_nickandphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="users@mail.com" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_point"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttoncolorless"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="+Point"
            android:textColor="@color/colorPoint"/>

        <TextView
            android:id="@+id/tv_point"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30,000ì›"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
