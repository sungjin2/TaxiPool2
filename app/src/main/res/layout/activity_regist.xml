<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map_regist"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="출발지"
            android:textSize="13dp"
            android:textColor="@color/black"

            />
        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_regist_start_spot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPink"
            />
    </LinearLayout>
    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="목적지"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_regist_end_spot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorPink"
            android:layout_marginTop="5dp"
            android:textSize="14dp" />
    </LinearLayout>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="출발시간"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_regist_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택옵션"
            android:textSize="13dp"
            android:paddingTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txalcohol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취객금지"
                    android:textColor="@color/black"
                    />
                <CheckBox
                    android:id="@+id/chAlcohol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별무관"
                    android:textColor="@color/black"
                    />
                <CheckBox
                    android:id="@+id/chGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"

                    />
                <TextView
                    android:id="@+id/txWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성전용"
                    android:textColor="@color/black"
                    />
                <CheckBox
                    android:id="@+id/chWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <TextView
                    android:id="@+id/txMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성전용"
                    android:textColor="@color/black"
                    />
                <CheckBox
                    android:id="@+id/chMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"

        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="추가모집"
            android:textSize="13dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"

            />
        <Spinner
            android:layout_marginLeft="30dp"
            android:id="@+id/spin_regist_peoplenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <include layout="@layout/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="결제방법"
            android:textSize="13dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />

        <RadioGroup
            android:id="@+id/payment"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="point"
                android:layout_weight="1"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현금"
                android:layout_weight="1"
                android:textSize="13dp"
                android:textColor="@color/black"
                />
        </RadioGroup>


    </LinearLayout>
    <include layout="@layout/view_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btRegist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_drawable_click"
            android:text="방 생성"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>